# PostgreSQL Database Container for Hospital-D
FROM postgres:14-alpine

# Set environment variables
ENV POSTGRES_DB=hospital_d_db
ENV POSTGRES_USER=postgres
ENV POSTGRES_PASSWORD=postgres

# Copy initialization scripts
# These will run automatically when container starts for the first time
COPY core/database/schema.sql /docker-entrypoint-initdb.d/01-schema.sql

# Expose PostgreSQL port
EXPOSE 5432

# Health check
HEALTHCHECK --interval=10s --timeout=5s --retries=5 \
  CMD pg_isready -U postgres -d hospital_d_db || exit 1
