# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hospital_d_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Serverless Configuration (Section C - Azure Event Hubs)
# Get these from Team 1 Central Platform
EVENT_HUB_CONNECTION_STRING=Endpoint=sb://YOUR-NAMESPACE.servicebus.windows.net/;SharedAccessKeyName=YOUR_KEY_NAME;SharedAccessKey=YOUR_KEY_HERE;TransportType=AmqpWebSockets
EVENT_HUB_INVENTORY_TOPIC=inventory-low-events
EVENT_HUB_ORDER_TOPIC=order-commands
CONSUMER_GROUP=$Default

# Hospital Configuration
HOSPITAL_ID=Hospital-D
PRODUCT_CODE=PHYSIO-SALINE-500ML
REORDER_THRESHOLD=2.0

# Architecture Selection (SOA or SERVERLESS)
ARCHITECTURE=SOA

# SOAP Configuration (Section B - SOA Integration)
# Get these from Team 1 Central Platform
SOAP_WSDL_URL=https://YOUR-TEAM1-ENDPOINT.azurewebsites.net/CentralServices?wsdl
SOAP_ENDPOINT=https://YOUR-TEAM1-ENDPOINT.azurewebsites.net/CentralServices
SOAP_USERNAME=
SOAP_PASSWORD=
SOAP_TIMEOUT=30000

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
